<?xml version="1.0"?>
<launch>
  <!-- Launch arguments -->
  <arg name="use_sim_time" default="false" description="Use simulation clock"/>
  
  <!-- Configuration file path -->
  <let name="config_file" value="$(find-pkg-share autoware_zed)/config/autoware_zed.yaml"/>
  
  <!-- Transformer node for front camera test -->
  <node pkg="autoware_zed" exec="autoware_zed_node" name="autoware_zed_front_test" output="screen">
    <param from="$(var config_file)"/>
    <param name="use_sim_time" value="$(var use_sim_time)"/>
    <param name="input_topic" value="/zed_multi/zed_front/obj_det/objects"/>
    <param name="output_topic" value="/perception/object_recognition/objects/front_test"/>
  </node>
</launch>