<launch>
  <!-- Launch arguments -->
  <arg name="camera_name" default="zed_front" description="Name of the camera"/>
  <arg name="camera_model" default="zedxm" description="Model of the camera"/>
  
  <!-- Include the display launch file -->
  <include file="$(find-pkg-share zed_display_rviz2)/launch/display_zed_cam.launch.py">
    <arg name="camera_name" value="$(var camera_name)"/>
    <arg name="camera_model" value="$(var camera_model)"/>
  </include>
</launch>
